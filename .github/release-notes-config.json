{
  "categories": [
    {
      "title": "## New Features",
      "labels": ["feat", "feature"]
    },
    {
      "title": "## Bug Fixes",
      "labels": ["fix", "bug"]
    },
    {
      "title": "## Performance Improvements",
      "labels": ["perf"]
    },
    {
      "title": "## Documentation",
      "labels": ["docs", "doc"]
    },
    {
      "title": "## Refactoring",
      "labels": ["refactor"]
    },
    {
      "title": "## Build & CI",
      "labels": ["build", "ci"]
    },
    {
      "title": "## Chores",
      "labels": ["chore"]
    }
  ],
  "label_extractor": [
    {
      "pattern": "^(feat|feature|fix|bug|perf|docs|doc|refactor|build|ci|chore)(\\(.+\\))?!?:",
      "on_property": "title",
      "target": "$1"
    }
  ],
  "sort": {
    "order": "DESC",
    "on_property": "mergedAt"
  },
  "template": "## What's Changed\n\n#{{CHANGELOG}}\n\n#{{UNCATEGORIZED}}\n\n**Full Changelog**: #{{RELEASE_DIFF}}",
  "commit_template": "- #{{TITLE}} (#{{MERGE_SHA}})",
  "empty_template": "No changes in this release.",
  "transformers": [
    {
      "pattern": "^(feat|feature|fix|bug|perf|docs|doc|refactor|build|ci|chore)(\\(.+\\))?!?:\\s*",
      "target": "",
      "flags": "i"
    }
  ],
  "trim_values": true
}
