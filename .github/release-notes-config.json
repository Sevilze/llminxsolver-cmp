{
  "categories": [
    {
      "title": "## New Features",
      "labels": ["feat", "feature", "add", "implement", "wire", "New Features"]
    },
    {
      "title": "## Bug Fixes",
      "labels": ["fix", "bug", "Bug Fixes"]
    },
    {
      "title": "## Performance Improvements",
      "labels": ["perf", "Performance Improvements"]
    },
    {
      "title": "## Documentation",
      "labels": ["docs", "doc", "Documentation"]
    },
    {
      "title": "## Refactoring",
      "labels": ["refactor", "update", "change", "remove", "migrate", "Refactoring"]
    },
    {
      "title": "## Build & CI",
      "labels": ["build", "ci", "deps", "Build & CI"]
    },
    {
      "title": "## Chores",
      "labels": ["chore", "Chores"]
    }
  ],
  "label_extractor": [
    {
      "pattern": "^(feat|feature|fix|bug|perf|docs|doc|refactor|build|ci|chore|add|implement|wire|update|change|remove|deps|migrate){1}(\\([\\w\\-\\.]+\\))?(!)?(:)?\\s+([\\s\\S]*)",
      "on_property": "title",
      "target": "$1"
    }
  ],
  "sort": {
    "order": "DESC",
    "on_property": "mergedAt"
  },
  "template": "## What's Changed\n\n#{{CHANGELOG}}\n\n## Miscellaneous\n\n#{{UNCATEGORIZED}}\n\n**Full Changelog**: #{{RELEASE_DIFF}}",
  "commit_template": "- #{{TITLE}} (#{{MERGE_SHA}})",
  "empty_template": "No changes in this release.",
  "trim_values": true
}
